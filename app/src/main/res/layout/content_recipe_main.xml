<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.RecipeMainActivity"
    tools:showIn="@layout/activity_recipe_main">

    <ProgressBar
        android:id="@+id/pb_recipe_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_32_spacing"
        android:layout_marginEnd="@dimen/dp_32_spacing"
        android:layout_marginLeft="@dimen/dp_32_spacing"
        android:layout_marginRight="@dimen/dp_32_spacing"
        android:layout_marginStart="@dimen/dp_32_spacing"
        android:layout_marginTop="@dimen/dp_32_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipe_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_8_spacing"
        android:layout_marginEnd="@dimen/dp_16_spacing"
        android:layout_marginStart="@dimen/dp_16_spacing"
        android:layout_marginTop="@dimen/dp_8_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/content_list_recipe"/>
</android.support.constraint.ConstraintLayout>